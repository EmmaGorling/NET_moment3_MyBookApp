@model MyBookApp.Models.Author

@{
    ViewData["Title"] = "Lägg till författare";
}

<h1 class="text-center mb-5">Lägg till författare</h1>

<div class="container mx-auto mw-70ch">
    <form class="w-100" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group my-4 mx-auto w-fc">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Tillbaka till listan</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
