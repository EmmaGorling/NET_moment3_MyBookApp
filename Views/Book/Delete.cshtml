@model MyBookApp.Models.Book

@{
    ViewData["Title"] = "Radera " + @Model.Title;
}

<h1 class="text-center mb-5">Radera</h1>

<p class="text-center" ><strong>Är du säker på att du vill radera denna bok?</strong></p>
<div class="p-1 mx-auto w-100 mw-70ch">

    <article  class="mb-4 p-3 border border-dark-subtle rounded">
        <h3 class="mb-4 text-center">@Html.DisplayFor(model => model.Title)</h3>
        <dl class="row my-5">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Author.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>

        <form class="mx-auto w-fc mt-4" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Radera" class="btn btn-danger" /> |
            <a class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" asp-action="Index">Tillbaka till listan</a>
        </form>
    </article>
    
    
    
</div>
