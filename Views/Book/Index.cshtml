@model IEnumerable<MyBookApp.Models.Book>

@{
    ViewData["Title"] = "Mina böcker";
}

<h1 class="text-center mb-5">Mina böcker</h1>



<div class="p-1 mx-auto w-100 mw-70ch">

    <p class="mb-4">
        <a asp-action="Create">Lägg till bok</a>
    </p>
    
    <form asp-action="Index" method="get" class="mb-4">
        <input type="text" name="searchString" class="form-control" placeholder="Sök efter bok eller författare" value="@Context.Request.Query["searchString"]">
        <div class="form-group my-4 mx-auto w-fc">
            <button type="submit" class="btn btn-success">Sök</button>
        </div>
    </form>

    <section class="my-5 w-100">
        @foreach (var item in Model) {
            <article class="mb-4 p-3 border border-dark-subtle rounded">
            <h3 class="mb-4">@Html.DisplayFor(modelItem => item.Title)</h3>
            <p>Av @item.Author.Name</p>
            <div class="d-flex justify-content-end">
                <a class="mx-2 link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" asp-action="Edit" asp-route-id="@item.Id">Redigera</a> | 
                <a class="mx-2 link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                <a class="mx-2 link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" asp-action="Delete" asp-route-id="@item.Id">Radera</a> 
            </div>
        </article>
        }
    </section>
</div>
